@model ProductVM

<div class="container-fluid py-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 pb-5">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner border">

                    @if (Model.Product.ProductPictures.Any())
                    {

                        <div class="carousel-item active">
                            <img class="w-100 h-100" src="@Model.Product.ProductPictures.FirstOrDefault().Picture" alt="@Model.Product.Name">
                        </div>

                        @foreach (ProductPicture pp in Model.Product.ProductPictures)
                        {

                            <div class="carousel-item">
                                <img class="w-100 h-100" src="@pp.Picture" alt="@pp.Name">
                            </div>
                        }

                    }
                    else
                    {
                        <img class="w-100 h-100" src="/img/hazirlaniyor.png" alt="@Model.Product.Name">
                    }

                    @*@if (Model.Product.ProductPictures.Count() > 1)
