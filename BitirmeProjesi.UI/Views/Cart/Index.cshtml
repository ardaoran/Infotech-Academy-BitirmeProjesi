
@model List<Cart>
<!-- Cart Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Ürünler</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (Cart c in Model)
                    {
                        <tr>
                            <td class="align-middle"><img src="@c.ProductPicture" alt="" style="width: 50px;"> @c.ProductName</td>
                            <td class="align-middle">@c.FiyatFormatted</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-minus">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" class="form-control form-control-sm bg-secondary text-center" value="@c.Quantity">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-primary btn-plus">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>

                                </div>
                            </td>
                            <td class="align-middle">@(c.Quantity * c.ProductPrice)</td>

                        </tr>

                    }


                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Ödenmesi Gereken Miktar</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="font-weight-medium">Toplam</h6>
                        <h6 class="font-weight-medium">@(Model.Sum(x=>x.Quantity* x.ProductPrice))</h6>
                    </div>
                </div>
                <a asp-controller="Cart" asp-action="CheckOut" class="btn btn-block btn-primary my-3 py-3">Ödeme Yap</a>
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->