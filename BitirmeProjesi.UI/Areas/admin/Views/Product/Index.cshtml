  <!-- page content -->

@model IEnumerable<Product>
<div class="right_col" role="main">
    <div class="">

        <div class="row" style="display: block;">

            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="col-md-6 col-sm-6">
                        <h2>Ürün Yönetimi</h2>
                    </div>
                    <div class="col-md-6 col-sm-6">
                        <a asp-controller="Product" asp-action="New" class="btn btn-success float-right" style="color:#fff">Yeni Ürün Ekle</a>
                    </div>


                    <div class="x_content">

                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action">
                                <thead>
                                    <tr class="headings">

                                        <th class="column-title">Araç Adı </th>
                                        <th class="column-title">Fiyat </th>
                                        <th class="column-title">Model </th>
                                        <th class="column-title">Motor </th>
                                        <th class="column-title">Beygir </th>
                                        <th class="column-title">Vites </th>
                                        <th class="column-title">Aciklama </th>
                                        <th class="column-title">Stok Miktarı </th>
                                        <th class="column-title">Görüntülenme Sırası </th>
                                        <th></th>

                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (Product s in Model)
                                    {
                                        <tr class="even pointer">
                                            <td class=" "><a asp-controller="Product" asp-action="Edit" asp-route-id="@s.ID">@s.Name</a></td>
                                            <td class=" ">@s.Fiyat</td>
                                            <td class=" ">@s.Modeli</td>
                                            <td class=" ">@s.Motor</td>
                                            <td class=" ">@s.Beygir</td>
                                            <td class=" ">@s.Vites</td>
                                            <td class=" ">@s.Aciklama</td>
                                            <td class=" ">@s.StokMiktari</td>
                                            <td class=" ">@s.DisplayIndex</td>

                                            <td><a asp-controller="ProductPicture" asp-action="Index" asp-route-productid="@s.ID" >Ürüne Ait Resimler</a></td>

                                            <td><a asp-controller="Product" asp-action="Delete" asp-route-id="@s.ID" class="btn btn-danger">Sil</a></td>
                                            
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->  <!-- page content -->


